<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="300dp"
    android:layout_width="match_parent"
    android:layout_margin="16dp">
    <!--card_view:cardCornerRadius="5dp"-->
    <!--card_view:cardBackgroundColor="#FFE4B5"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_margin="16dp">
        <ImageView
            android:id="@+id/activity7_touxiang_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="8dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/activity7_author_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity7_time_tv"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <TextView
        android:id="@+id/activity7_abstract_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="16dp"/>
    <ImageView
        android:id="@+id/activity7_abstract_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="16dp"/>
</LinearLayout>